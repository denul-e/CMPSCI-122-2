#include <stdio.h>

int main() {
    // Declare constant variables for the number bases
    const int base2 = 2;
    const int base3 = 3;
    const int base8 = 8;
    const int base10 = 10;
    const int base16 = 16;

    int numBase;

    // Prompt the user to enter a number base
    printf("Enter a number base (2, 3, 8, 10, or 16): ");
    scanf("%d", &numBase);

    // Use if-else statements to determine the output based on the input base
    if (numBase == base2) {
        printf("Binary  0..1\n");
    } else if (numBase == base3) {
        printf("Trinary 0..2\n");
    } else if (numBase == base8) {
        printf("Octal   0..7\n");
    } else if (numBase == base10) {
        printf("Decimal 0..9\n");
    } else if (numBase == base16) {
        printf("Hexadecimal 0..F\n");
    } else {
        // Print an error message for invalid inputs
        printf("Error: Invalid number base. Please enter 2, 3, 8, 10, or 16.\n");
    }

    return 0;
}
